<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- The cave (a large rectangle at the bottom) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#654321"/> <!-- Brown color for the cave -->
            <size android:height="200dp" android:width="360dp"/> <!-- Adjust these sizes to fit your needs -->
            <corners android:radius="10dp"/> <!-- Slight rounding for a more "cave-like" look -->
        </shape>
    </item>

    <!-- The left torch -->
    <item android:left="20dp" android:top="150dp" android:right="200dp" android:bottom="20dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFA500"/> <!-- Orange color for the torch -->
            <size android:height="30dp" android:width="10dp"/> <!-- Size of the torch -->
        </shape>
    </item>

    <!-- The right torch -->
    <item android:left="330dp" android:top="150dp" android:right="20dp" android:bottom="20dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFA500"/> <!-- Orange color for the torch -->
            <size android:height="30dp" android:width="10dp"/> <!-- Size of the torch -->
        </shape>
    </item>
</layer-list>
